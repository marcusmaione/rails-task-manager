<div style="margin-left: 20px">
<h1>My tasks</h1>
<p>-----------------------------------------------</p>
<div style="margin-left: 30px">
  <h3><%= link_to "Create new task" , new_task_path %></h3>
</div>
<p>-----------------------------------------------</p>
<% @tasks.each do |task| %>
  <% if task.completed? %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" checked disabled>
    </div>
  <% else %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" disabled>
    </div>
  <% end %>
  <div style="margin-left: 30px">
    <p><%= link_to task.title , task_path(task.id) %></p>
  </div>
  <p>-----------------------------------------------</p>
<% end %>
</div>
